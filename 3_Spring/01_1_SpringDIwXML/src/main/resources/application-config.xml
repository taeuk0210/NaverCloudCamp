<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<bean id="helloService" class="com.myedu.myapp.hello.service.HelloServiceImpl"/>
	<bean id="helloController" class="com.myedu.myapp.hello.controller.HelloController">
		<property name="helloService" ref="helloService"/>
	</bean>
	
	<bean id="personBean" class="com.myedu.myapp.Person">
		<property name="name" value="이주현"/>
		<property name="age" value="25"/>				
	</bean>
	
	<bean id="customer" class="com.myedu.myapp.Customer">
		<property name="lists">
			<list>
				<value>1</value>
				<ref bean="personBean"/>
				<bean class="com.myedu.myapp.Person">
					<property name="name" value="강태욱"/>
					<property name="age" value="25"/>				
				</bean>
			</list>
		</property>
		
		<property name="sets">
			<set>
				<value>2</value>
				<ref bean="personBean"/>
				<bean class="com.myedu.myapp.Person">
					<property name="name" value="김태욱"/>
					<property name="age" value="24"/>				
				</bean>
			</set>
		</property>

		<property name="maps">
			<map>
				<entry key="key1" value="3"/>
				<entry key="key2" value-ref="personBean"/>
				<entry key="key3">
					<bean class="com.myedu.myapp.Person">
						<property name="name" value="금태욱"/>
						<property name="age" value="23"/>				
					</bean>
				</entry>
			</map>
		</property>
		
		<property name="props">
			<props>
				<prop key="webmaster">webmaster@naver.com</prop>
				<prop key="support">support@naver.com</prop>
			</props>
		</property>
	</bean>
</beans>
